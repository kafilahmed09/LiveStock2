@model RegisterLabUserModel
@{
    ViewData["Title"] = "Register";
     var Roles = new List<SelectListItem>
                {
                    new SelectListItem { Value = "Administrator", Text = "Administrator" },
                    new SelectListItem { Value = "Procurement", Text = "Procurement" },
                    new SelectListItem { Value = "Education", Text = "Education" },
                    new SelectListItem { Value = "Development", Text = "Development"  },
                    new SelectListItem { Value = "M&E", Text = "M&E"  },
                    new SelectListItem { Value = "Finance", Text = "Finance"  },
                    new SelectListItem { Value = "HR", Text = "HR"  },
                    new SelectListItem { Value = "CovidLab", Text = "CovidLab"  },
                    new SelectListItem { Value = "CovidAdmin", Text = "CovidAdmin"  },
                    new SelectListItem { Value = "Admin", Text = "Admin"  },
                    new SelectListItem { Value = "Guest", Text = "Guest"  },
                };
}
<div class="login-box-body">
    <p class="login-box-msg">Register a new membership</p>
    <form method="post">
        <input asp-for="Input.RegionalAccess" type="hidden" value="1">        
        <input asp-for="Input.SectionRole" type="hidden" value="CovidLab">
        <div class="form-group has-feedback">
            <input asp-for="Input.FullName" type="text" class="form-control" placeholder="Full name">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <span asp-validation-for="Input.FullName" class="help-block"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <span asp-validation-for="Input.Email" class="help-block"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="Input.Password" class="help-block"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            <span asp-validation-for="Input.ConfirmPassword" class="help-block"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        @*<div class="form-group has-feedback">
            <input asp-for="Input.RegionalAccess" class="form-control" placeholder="Regional Access Eg. 1,2,3">
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            <span asp-validation-for="Input.RegionalAccess" class="help-block"></span>
