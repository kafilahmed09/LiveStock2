<style>


    .flip-boxX, .flip-boxY {
        background-color: transparent;
        width: 200px;
        height: 150px;
        border: 1px solid #f1f1f1;
        perspective: 1000px;
    }

    .flip-boxX-inner, .flip-boxY-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-boxX:hover .flip-boxX-inner {
        transform: rotateX(180deg);
    }

    .flip-boxY:hover .flip-boxY-inner {
        transform: rotateY(180deg);
    }

    .flip-box-front, .flip-boxX-back, .flip-boxY-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }

    .flip-box-front {
        background-color: #333333;
        color: white;
        text-align: center;
    }

    .flip-boxX-back {
        background-color: dodgerblue;
        background-image: linear-gradient(red, green);
        color: white;
        transform: rotateX(180deg);
    }

    .flip-boxY-back {
        background-color: #1ab394;
        background-image: linear-gradient(red, green);
        color: white;
        transform: rotateY(180deg);
    }
</style>

