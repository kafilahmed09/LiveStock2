@model IEnumerable<LIVESTOCK.Areas.website.Models.Budget>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/website/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/libs/datatables/css/dataTables.bootstrap.min.css">
}

<div style="margin:20px;min-height:300px">
    <h4><b>List of Budgets</b></h4>
    <table class="table table-striped table-bordered  dataTables-example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    <text>Quarterly / Yearly</text>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                int year = item.Year + 1;
            <tr>
                <td>
                    <text>@item.Year - @year</text>
                </td>
                <td>
                    @if (item.Quarter == 1)
                    {
                        <text>First</text>
                    }
                    else if (item.Quarter == 2)
                    {
                        <text>Second</text>
                    }
                    else if (item.Quarter == 3)
                    {
                        <text>Third</text>
                    }
                    else if (item.Quarter == 4)
                    {
                        <text>Fourth</text>
                    }
                    else
                    {
                        <text>Yearly</text>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a href='@Url.Content(item.filepath)' target="_blank">View</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

