@inject LIVESTOCK.Services.Profile.ProfileManager ProfileManager

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/img/LDDDLogo2.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@ProfileManager.CurrentUser.UserName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/WebAdmin/Index"><i class="fa fa-dashboard"></i> Website Summary</a></li>
            <li class="treeview @(Html.IsMenuActive("/Settings") ? "active" : "")">
                <a href="#">
                    <i class="fa fa-gear"></i>
                    <span>LDDD Website</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/MainSliders/Create"><i class="fa fa-sliders"></i> Main Slider</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/Notifications/Create"><i class="fa fa-sticky-note"></i> Notifications</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/ProjectServices/Create"><i class="fa fa-telegram"></i> Services</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/ServiceCenters/Create"><i class="fa fa-telegram"></i> Service Centers</a></li>
                    @*<li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/WhatNews/Create"><i class="fa fa-hacker-news"></i> What's New</a></li>*@
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/NewsEvents/Create"><i class="fa fa-info-circle"></i> News & Events</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/DGPRs/Create"><i class="fa fa-newspaper-o"></i> DGPR</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/Videos/Create"><i class="fa fa-file-video-o"></i> Videos</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/Galleries/Create"><i class="fa fa-picture-o"></i> Gallery</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/ImportantLinks/Create"><i class="fa fa-link"></i> Important Links</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/SocialMedias/Edit"><i class="fa fa-soccer-ball-o"></i> Social Media</a></li>
                    <li class="@(Html.IsMenuActive("/Settings/Profile") ? "active" : "")"><a href="~/Website/ContactInfoes/Edit"><i class="fa fa-address-book"></i> Contact Us</a></li>
                </ul>
            </li>

        </ul>
    </section>
    <!-- /.sidebar -->
</aside>