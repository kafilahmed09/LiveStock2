@model LIVESTOCK.Areas.website.Models.ProjectService


@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/website/Views/Shared/_LayoutWebadmin.cshtml";
}
@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/libs/datatables/css/dataTables.bootstrap.min.css">
}
<div style="margin:20px">
    <div><h4 style="font-weight:600;font-style:oblique"><u>Add New service Activity</u></h4></div>


    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ServiceTypeID" class="control-label"></label>
            <select asp-for="ServiceTypeID" class="form-control" asp-items="ViewBag.ServiceTypeID"></select>
        </div>
        <div class="form-group">
            <label asp-for="SerialNo" class="control-label"></label>
            <input asp-for="SerialNo" class="form-control" />
            <span asp-validation-for="SerialNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Visibility" /> @Html.DisplayNameFor(model => model.Visibility)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreatedOn" class="control-label"></label>
            <input asp-for="CreatedOn" class="form-control" />
            <span asp-validation-for="CreatedOn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>

<div class="row" style="margin-left:10px">
    <div class="col-md-3">
        <h4 class="box-title">
            <text style="font-weight:bold">List of Services </text>
        </h4>
    </div>
    <div class="col-md-1" id="divLoading">
        <img src="~/img/sspinner.gif" width="40" height="40" />
    </div>

</div>

<div id="dynamicContentContainer" style="margin:0 15px 0 15px"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $.get('@Url.Action("Index2", "ProjectServices")', function (content) {
                $("#dynamicContentContainer").html(content);
                $("#divLoading").hide();
            });
        });
    </script>

}
