@model LIVESTOCK.Areas.website.Models.NewsEvent

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/website/Views/Shared/_LayoutWebadmin.cshtml";
}

<div style="margin:20px">
    <div><h4 style="font-weight:600;font-style:oblique"><u>Edit & Upload News-Event Activity</u></h4></div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-9">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="CreatedOn" type="hidden" />
                <input asp-for="NewsEventID" type="hidden" />
                <div class="form-group">
                    <label asp-for="Heading" class="control-label"></label>
                    <input asp-for="Heading" class="form-control" maxlength="300" />
                    <span asp-validation-for="Heading" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="OnDate" class="control-label"></label>
                    <input asp-for="OnDate" class="form-control" />
                    <span asp-validation-for="OnDate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" rows="10" cols="30" class="form-control" placeholder="News Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Post-Upload" class="btn btn-success" />
                    <div style="margin-left:10px;padding-bottom:10px">
                        <a asp-action="Create">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label class="control-label">Upload Pictures</label>
                    <div>
                        <span class="btn btn-file" style="padding:0"><img src="~/images/uploadfile.png" width="30" height="30" /><input multiple type="file" name="Attachment" accept=".jpg,.jpeg,.png"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-1" style="padding:0">
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Visibility" /> @Html.DisplayNameFor(model => model.Visibility)
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="row" style="padding-bottom:20px">
    @foreach (var item in ViewBag.Pictures)
    {
        <form asp-action="Delete3" enctype="multipart/form-data">
            <input type="hidden" value="@item.NewsEventPictureID" name="picId" />
            <input type="hidden" value="@item.NewsEventID" name="id" />
            <div class="col-md-3" style="padding:0 20px 0 20px">
                <input type="submit" value="Delete" class="btn btn-primary" style="margin-bottom:5px" />
                <img src="@item.PicturePath" width="200" height="200" />
            </div>
        </form>
    }
</div>

