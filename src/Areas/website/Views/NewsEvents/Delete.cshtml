@model LIVESTOCK.Areas.website.Models.NewsEvent

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/website/Views/Shared/_LayoutWebadmin.cshtml";
}


<div style="margin:20px">
    <h3>Delete</h3>
    <h4 style="font-weight:bold">Are you sure you want to delete this?</h4>
    <h4>News & Event</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <text>Heading</text>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Heading)
        </dd>
        <dt>
            <text>Description</text>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OnDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OnDate)
        </dd>
        <dt>
            <text>Cteated On</text>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NewsEventID" />
        <input type="submit" value="Delete" class="btn btn-warning" /> |
        <a asp-action="Create">Back to List</a>
    </form>
</div>
<div class="row" style="padding-bottom:20px">
    @foreach (var item in ViewBag.Pictures)
    {
    <form asp-action="Delete2" enctype="multipart/form-data">
        <input type="hidden" value="@item.NewsEventPictureID" name="picId"/>
        <input type="hidden" value="@item.NewsEventID" name="id"/>
        <div class="col-md-3" style="padding:20px">
            <input type="submit" value="Delete" class="btn btn-primary" style="margin-top:5px" />
            <img src="@item.PicturePath" width="200" height="200" />
        </div>
    </form>
    }        
    </div>