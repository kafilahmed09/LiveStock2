@model IEnumerable<LIVESTOCK.Areas.website.Models.GalleryFolder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/website/Views/Shared/_LayoutWebadmin.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FolderTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FolderImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visibility)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FolderTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FolderImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visibility)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GalleryFolderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GalleryFolderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GalleryFolderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
