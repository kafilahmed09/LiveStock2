
@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/libs/datatables/css/dataTables.bootstrap.min.css">

    <style>
        .list {
            list-style: disc outside none;
            display: list-item;
            padding-left: 5px;
        }
    </style>
}

<div class="container">
    <div class="container-fluid justify-content-center">
        <div class="row">
            <div class="col-12 text-center pt-5">
                <h4><b><marquee>@ViewBag.Heading</marquee></b></h4>
                <hr style="border: 2px solid #0f9fc4; width: 100%;">
            </div>
            <div class="col-12 text-left">
                <h4 class="text-center"><b>MESSAGE</b></h4>
                <hr style="border: 2px solid #0f9fc4; width: 100%;">
                <div class="row">
                    <div class="col-md-10">
                        <p class="text-justify">
                            @ViewBag.Description
                        </p>
                    </div>
                    <div class="col-md-2">
                        <img src="/documents/card/s.png" />
                    </div>
                </div>

                <hr style="border: 2px solid #0f9fc4; width: 100%;">
            </div>                   
        </div>
    </div>    
</div>