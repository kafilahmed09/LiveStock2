@model LIVESTOCK.Areas.website.Models.ContactInfo
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Areas/website/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
<style>
    .mapouter {
        position: relative;
        text-align: right;
        height: 500px;
        width: 100%;
    }

    .gmap_canvas {
        overflow: hidden;
        background: none !important;
        height: 500px;
        width: 100%;
    }
</style>

<div class="container">

    <div class="row">
        <div class="col-lg-5 wow fadeInLeft">
            <div class="contact_info">
                <div class="detail">
                    @*<h3>LIVESTOCK</h3>*@
                    <br />
                    <div class="single-contact-info d-flex align-items-center" style="margin-bottom:15px">
                        <div class="icon mr-15">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                        </div>
                        <div class="text">
                            <p>@Model.Address</p>
                        </div>
                    </div>
                </div>
                <!-- Single Contact Info -->
                <div class="single-contact-info d-flex align-items-center" style="margin-bottom:15px">
                    <div class="icon mr-15">
                        <i class="fa fa-phone" aria-hidden="true"></i>
                    </div>
                    <div class="text">
                        <p>Phone#</p>
                        <h5>@Model.PhoneNo1</h5>
                        @{
                            if (Model.PhoneNo2 != "")
                            {
                                <h5>@Model.PhoneNo2</h5>
                            }
                        }
                        @{
                            if (Model.PhoneNo3 != "")
                            {
                                <h5>@Model.PhoneNo3</h5>
                            }
                        }
                        @{
                            if (Model.PhoneNo4 != "")
                            {
                                <h5>@Model.PhoneNo4</h5>
                            }
                        }
                    </div>
                </div>
                @*<div class="single-contact-info d-flex align-items-center" style="margin-bottom:15px">
                    <div class="icon mr-15">
                        <i class="fa fa-whatsapp" aria-hidden="true"></i>
                    </div>
                    <div class="text">
                        <p>WhatsApp#</p>
                        <h5>@Model.WhatsAppNo</h5>                        
                    </div>
                </div>*@
                <!-- Single Contact Info -->
                <div class="single-contact-info d-flex align-items-center" style="margin-bottom:15px">
                    <div class="icon mr-15">
                        <i class="fa fa-fax" aria-hidden="true"></i>
                    </div>
                    <div class="text">
                        <p>Fax#</p>
                        <h5>@Model.FaxNo1</h5>
                        @{
                            if (Model.FaxNo2 != "")
                            {
                                <h5>@Model.FaxNo2</h5>
                            }
                        }
                        @{
                            if (Model.FaxNo3 != "")
                            {
                                <h5>@Model.FaxNo3</h5>
                            }
                        }
                    </div>
                </div>
                <!-- Single Contact Info -->
                <div class="single-contact-info d-flex align-items-center" style="margin-bottom:15px">
                    <div class="icon mr-15">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </div>
                    <div class="text">
                        <p>Email#</p>
                        @{
                            if (Model.Email != "")
                            {
                                <h5>@Model.Email</h5>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="mapouter"><div class="gmap_canvas"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3448.314965830684!2d66.99834481420042!3d30.199556718185207!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ed2dfb028f5692d%3A0xcda9291c60caf8b4!2sDirectorate%20General%20of%20Livestock%20Department!5e0!3m2!1sen!2s!4v1622285367180!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe></div></div>
        </div>
    </div>
</div>