@model LIVESTOCK.Areas.website.Models.Notification

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/website/Views/Shared/_LayoutWebadmin.cshtml";
}

<div style="margin:20px">
    <div><h4 style="font-weight:600;font-style:oblique"><u>Edit & Upload Notification Activity</u></h4></div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                
                <input asp-for="NotificationID" type="hidden" />
                <input asp-for="FilePath" type="hidden" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-success" />
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>
                    <div>
                        <span class="btn btn-file" style="padding:0"><img src="~/images/uploadfile.png" width="30" height="30" /><input type="file" name="Attachment" accept="application/pdf"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input asp-for="CreatedOn" class="form-control" />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1" style="margin-top:15px">
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Visibility" /> @Html.DisplayNameFor(model => model.Visibility)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="ShowOnSlider" /> @Html.DisplayNameFor(model => model.ShowOnSlider)
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

<div style="margin-left:10px">
    <a asp-action="Create">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
