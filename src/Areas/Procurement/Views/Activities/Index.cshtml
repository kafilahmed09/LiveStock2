                    <h3 class="box-title">Payment Released</h3>
                    <h2 class="no-margins font-bold">
                        <text>@String.Format("{0:#,##}", "0")</text>
                    </h2>
                    <small>Savings</small>
                </div>
            </div>
        </div>

    </div>
